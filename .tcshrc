# Allow tab completion.
set autoexpand
set autolist

# Set history size to 100 lines.
set history=100
# HISTFILE.
set savehist=100
set histfile=~/.tcsh_history

setenv EDITOR /opt/local/bin/vim
setenv PATH /opt/local/bin:$PATH

# Prompt. Source: https://www.cs.umd.edu/~srhuang/teaching/code_snippets/prompt_color.tcsh.html
# Colours.
set     red="%{\033[1;31m%}"
set   green="%{\033[0;32m%}"
set  yellow="%{\033[1;33m%}"
set    blue="%{\033[1;34m%}"
set magenta="%{\033[1;35m%}"
set    cyan="%{\033[1;36m%}"
set   white="%{\033[0;37m%}"
set     end="%{\033[0m%}"
# User.
set prompt="${green}%n${red}@${blue}%m ${yellow}%~ ${green}%%${end} "
# Root.
# set prompt="${green}%n${red}@${blue}%m ${yellow}%~ ${red}%#${end} "
# Cleanup.
unset red green yellow blue magenta cyan yellow white end
